.icon-heart {
  display: inline-block;
  width: 1em;
  height: 1em;
  position: relative;
}

.icon-heart::before,
.icon-heart::after {
  content: '';
  width: 0.5em;
  height: 0.8em;
  position: absolute;
  left: 0.5em;
  transform: rotate(-45deg);
  transform-origin: 0 100%;
  border-radius: 0.5em 0.5em 0 0;
  background: currentColor;
}

.icon-heart::after {
  left: 0;
  transform: rotate(45deg);
  transform-origin: 100% 100%;
}