.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  transition: all 0.3s;
  position: relative;
}

.product-card:active {
  transform: scale(0.98);
}

/* 网格模式样式 */
.product-card.grid {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.product-card.grid .product-image-wrapper {
  height: 200rpx;
}

.product-card.grid .product-info {
  padding: 15rpx;
}

/* 列表模式样式 */
.product-card.list {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  border-radius: 0;
}

.product-card.list .product-image-wrapper {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-card.list .product-info {
  flex: 1;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 商品图片区域 */
.product-image-wrapper {
  position: relative;
  width: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.product-card.grid .product-image {
  border-radius: 0;
}

/* 商品标签 */
.product-tags {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.product-tag {
  font-size: 20rpx;
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  margin-bottom: 4rpx;
  align-self: flex-start;
}

.product-tag.hot {
  background-color: #FF4D4F;
}

.product-tag.new {
  background-color: #52C41A;
}

.product-tag.recommend {
  background-color: #1890FF;
}

/* 缺货遮罩 */
.out-of-stock-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
}

.out-of-stock-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

/* 商品信息区域 */
.merchant-name {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

/* 价格信息 */
.product-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.current-price {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: bold;
  margin-right: 10rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.group-price {
  font-size: 22rpx;
  color: #52C41A;
  background-color: rgba(82, 196, 26, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

/* 底部信息 */
.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-stats {
  flex: 1;
}

.sales {
  font-size: 22rpx;
  color: #999;
  margin-right: 20rpx;
}

.stock {
  font-size: 22rpx;
  color: #FF8C00;
}

/* 操作按钮组 */
.product-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-left: 10rpx;
}

.favorite-btn {
  background-color: #f5f5f5;
  color: #999;
}

.favorite-btn.active {
  background-color: #FF4D4F;
  color: #fff;
}

.buy-btn {
  background-color: #FF4D4F;
  color: #fff;
  width: 80rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 图标字体（如果使用iconfont） */
.iconfont {
  font-size: 28rpx;
}