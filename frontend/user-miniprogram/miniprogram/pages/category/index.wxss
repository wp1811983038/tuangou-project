/* pages/category/index.wxss - 完整的分类页面样式 */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

/* ========== 顶部搜索区域 ========== */
.search-header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  flex: 1;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.search-input::placeholder {
  color: #999;
  font-size: 26rpx;
}

.clear-search {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
}

/* 显示模式切换 */
.mode-switch {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  padding: 4rpx;
  min-width: 140rpx;
}

.mode-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
  border-radius: 4rpx;
  transition: all 0.3s;
  min-width: 60rpx;
}

.mode-item.active {
  background-color: #FF4D4F;
  color: #fff;
  font-weight: bold;
}

/* ========== 商户模式状态栏样式 ========== */
.merchant-mode-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #FF4D4F 0%, #FF7875 100%);
  color: #fff;
  position: relative;
  animation: slideDown 0.3s ease-out;
}

.merchant-mode-bar::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(10rpx);
}

.merchant-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.merchant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.merchant-details {
  display: flex;
  flex-direction: column;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.merchant-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.back-to-global {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  position: relative;
  z-index: 2;
  transition: all 0.3s;
}

.back-to-global:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.95);
}

.back-text {
  font-size: 24rpx;
  color: #fff;
  margin-right: 6rpx;
}

/* ========== 筛选栏 ========== */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.current-category {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.category-count {
  font-size: 20rpx;
  color: #999;
  margin-left: 8rpx;
  background: rgba(153, 153, 153, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-weight: normal;
}

.sort-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.sort-btn:active {
  background-color: #eaeaea;
  transform: scale(0.95);
}

.sort-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

/* ========== 内容容器 ========== */
.content-container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* ========== 左侧分类导航 ========== */
.category-sidebar {
  width: 180rpx;
  background-color: #f5f5f5;
  height: 100%;
}

.sidebar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 120rpx;
  padding: 20rpx 10rpx;
  position: relative;
  border-bottom: 1rpx solid #eee;
  transition: all 0.3s;
}

.sidebar-item:active {
  background-color: #eaeaea;
}

.sidebar-item.active {
  background-color: #fff;
  color: #FF4D4F;
}

.sidebar-item.active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 30%;
  width: 6rpx;
  height: 40%;
  background-color: #FF4D4F;
  border-radius: 0 3rpx 3rpx 0;
}

.category-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.2;
}

.sidebar-item.active .category-name {
  color: #FF4D4F;
  font-weight: bold;
}

.sidebar-item .category-count {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 商户模式下分类侧边栏的样式 */
.merchant-mode-bar ~ .content-container .category-sidebar {
  background: linear-gradient(180deg, #fafafa 0%, #ffffff 100%);
}

.merchant-mode-bar ~ .content-container .sidebar-item.active {
  background: linear-gradient(135deg, #FF4D4F 0%, #FF7875 100%);
  color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(255, 77, 79, 0.2);
}

.merchant-mode-bar ~ .content-container .sidebar-item.active .category-name {
  color: #fff;
}

.merchant-mode-bar ~ .content-container .sidebar-item.active .category-count {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

/* ========== 右侧内容列表 ========== */
.content-list {
  flex: 1;
  background-color: #fff;
  height: 100%;
}

/* ========== 商户列表样式 ========== */
.merchant-list {
  padding: 0 20rpx;
}

.merchant-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.merchant-item:active {
  background-color: #f9f9f9;
}

.merchant-item:last-child {
  border-bottom: none;
}

.merchant-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.merchant-info {
  flex: 1;
  overflow: hidden;
}

.merchant-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.merchant-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}

.merchant-tag {
  font-size: 22rpx;
  color: #FF4D4F;
  background-color: rgba(255, 77, 79, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
}

.merchant-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.merchant-meta {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.rating {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #FF4D4F;
  font-weight: bold;
}

.rating-text {
  font-size: 22rpx;
  color: #FF4D4F;
}

.distance {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.delivery-info {
  font-size: 24rpx;
  color: #52C41A;
}

.merchant-status {
  display: flex;
  align-items: center;
}

.status-text {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 15rpx;
}

.status-text.open {
  background-color: rgba(82, 196, 26, 0.1);
  color: #52C41A;
}

.status-text.closed {
  background-color: rgba(255, 77, 79, 0.1);
  color: #FF4D4F;
}

.business-hours {
  font-size: 22rpx;
  color: #999;
}

.merchant-arrow {
  margin-left: 15rpx;
  flex-shrink: 0;
}

/* ========== 商品网格样式 ========== */
.products-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 10rpx;
  animation: fadeIn 0.4s ease-out;
}

.product-item {
  width: calc(50% - 10rpx);
  margin: 5rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.product-item:active {
  transform: scale(0.98);
}

/* 商户模式下商品卡片优化 */
.merchant-mode-bar ~ .content-container .product-item {
  border: 1rpx solid rgba(255, 77, 79, 0.1);
}

.merchant-mode-bar ~ .content-container .product-item:hover {
  border-color: rgba(255, 77, 79, 0.3);
  box-shadow: 0 4rpx 15rpx rgba(255, 77, 79, 0.1);
}

.product-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-tags {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  display: flex;
  flex-direction: column;
}

.product-tag {
  font-size: 20rpx;
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  margin-bottom: 4rpx;
  align-self: flex-start;
}

.product-tag.hot {
  background-color: #FF4D4F;
}

.product-tag.new {
  background-color: #52C41A;
}

.product-tag.recommend {
  background-color: #1890FF;
}

.out-of-stock-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.out-of-stock-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.product-info {
  padding: 15rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.merchant-name {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.current-price {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: bold;
  margin-right: 10rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.group-price {
  font-size: 22rpx;
  color: #52C41A;
  background-color: rgba(82, 196, 26, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.product-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sales {
  font-size: 22rpx;
  color: #999;
}

.stock {
  font-size: 22rpx;
  color: #FF8C00;
}

/* ========== 排序面板 ========== */
.sort-panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
}

.sort-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s;
  max-height: 60vh;
}

.sort-panel.show {
  transform: translateY(0);
}

.sort-panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.sort-panel-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.sort-panel-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.sort-options {
  max-height: 500rpx;
  overflow-y: auto;
}

.sort-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.3s;
}

.sort-option:active {
  background-color: #f9f9f9;
}

.sort-option.active {
  background-color: rgba(255, 77, 79, 0.05);
}

.sort-option-text {
  font-size: 28rpx;
  color: #333;
}

.sort-option.active .sort-option-text {
  color: #FF4D4F;
  font-weight: bold;
}

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  margin: 20rpx;
  border-radius: 12rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #FF4D4F;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 15rpx;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.page-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.4;
  filter: grayscale(20%);
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
  line-height: 1.5;
  max-width: 400rpx;
}

.empty-action {
  padding: 15rpx 30rpx;
  background: linear-gradient(135deg, #FF4D4F 0%, #FF7875 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 77, 79, 0.3);
  transition: all 0.3s;
}

.empty-action:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 77, 79, 0.4);
}

/* ========== 加载更多提示 ========== */
.load-more-tip {
  text-align: center;
  padding: 30rpx 0;
  font-size: 26rpx;
  color: #999;
}

/* ========== 动画效果 ========== */
@keyframes slideDown {
  from {
    transform: translateY(-100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 响应式设计 ========== */
@media (max-width: 750rpx) {
  .products-grid {
    padding: 10rpx 5rpx;
  }
  
  .product-item {
    width: calc(50% - 5rpx);
    margin: 2.5rpx;
  }
  
  .merchant-mode-bar {
    padding: 15rpx 20rpx;
  }
  
  .merchant-avatar {
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
    margin-right: 15rpx;
  }
  
  .merchant-name {
    font-size: 26rpx;
  }
  
  .merchant-tip {
    font-size: 20rpx;
  }
  
  .back-text {
    font-size: 22rpx;
  }
}

@media (min-width: 1000rpx) {
  .products-grid {
    padding: 20rpx 15rpx;
  }
  
  .product-item {
    width: calc(33.333% - 10rpx);
  }
}

/* ========== 过渡动画优化 ========== */
.category-sidebar,
.content-list,
.product-item,
.empty-state {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ========== 商户模式提示增强 ========== */
.merchant-mode-indicator {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: linear-gradient(135deg, #FF4D4F 0%, #FF7875 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  z-index: 10;
}

/* ========== 深色主题适配（预留） ========== */
@media (prefers-color-scheme: dark) {
  .merchant-mode-bar {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }
  
  .empty-state {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }
  
  .empty-text {
    color: #ccc;
  }
  
  .container {
    background-color: #1a1a1a;
  }
  
  .search-header {
    background-color: #2d2d2d;
    border-bottom-color: #444;
  }
  
  .search-bar {
    background-color: #333;
  }
  
  .search-input {
    color: #fff;
  }
  
  .category-sidebar {
    background-color: #2d2d2d;
  }
  
  .sidebar-item {
    border-bottom-color: #444;
  }
  
  .sidebar-item.active {
    background-color: #444;
  }
  
  .content-list {
    background-color: #1a1a1a;
  }
  
  .product-item {
    background-color: #2d2d2d;
  }
  
  .product-name {
    color: #fff;
  }
  
  .loading-container {
    background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
  }
  
  .loading-text {
    color: #ccc;
  }
}