/* pages/login/index.wxss - 登录页面样式 */

.login-container {
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

/* 顶部logo和标题 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  margin-top: 40rpx;
}

.login-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(255, 77, 79, 0.1);
}

.login-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 登录方式选择 */
.login-type-tabs {
  display: flex;
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 60rpx;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #FF4D4F;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #FF4D4F;
  border-radius: 3rpx;
}

/* 登录面板 */
.login-panel {
  width: 100%;
  margin-bottom: 40rpx;
}

/* 微信登录 */
.wechat-login-tip {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-login {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-wechat {
  background-color: #07C160;
  color: #fff;
}

.icon-wechat {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

/* 手机号登录 */
.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input-control {
  width: 100%;
  height: 90rpx;
  background-color: #f5f5f5;
  border-radius: 45rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.login-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.action-item {
  font-size: 26rpx;
  color: #666;
}

.btn-phone {
  background-color: #FF4D4F;
  color: #fff;
}

.btn-phone[disabled] {
  background-color: #ffbcbd;
  color: #fff;
}

/* 验证码输入框 */
.verify-code-group {
  display: flex;
  align-items: center;
}

.verify-code-input {
  flex: 1;
}

.btn-send-code {
  width: 200rpx;
  height: 90rpx;
  background-color: #f5f5f5;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
  margin-left: 20rpx;
}

.btn-send-code.disabled {
  color: #999;
}

/* 底部协议 */
.agreement-container {
  display: flex;
  align-items: center;
  margin-top: auto;
  margin-bottom: 40rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}

.link {
  color: #FF4D4F;
}