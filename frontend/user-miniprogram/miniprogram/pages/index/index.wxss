/**index.wxss**/
/* 搜索栏 */
.search-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  align-items: center;
}

.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.location-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  background-image: url('data:image/png;base64,');
  background-size: cover;
}

.location-name {
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-bar {
  flex: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.search-placeholder {
  color: #999;
  font-size: 28rpx;
  margin-left: 10rpx;
}

/* 轮播图 */
.banner-container {
  width: 100%;
  height: 300rpx;
}

.banner-container swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类导航 */
.category-container {
  padding: 30rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  width: 120rpx;
  text-align: center;
  margin-right: 30rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 部分通用样式 */
.section {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 20rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-more {
  font-size: 26rpx;
  color: #666;
}

/* 商户列表 */
.merchant-list {
  padding: 0 30rpx;
}

.merchant-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.merchant-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.merchant-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.merchant-rating {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rating-score {
  font-size: 24rpx;
  color: #FF4D4F;
}

.merchant-distance {
  font-size: 24rpx;
  color: #999;
}

.merchant-desc {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 团购滚动 */
.group-scroll {
  white-space: nowrap;
  padding: 0 30rpx;
}

.group-item {
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.group-image {
  width: 100%;
  height: 200rpx;
}

.group-info {
  padding: 15rpx;
}

.group-title {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-price-info {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.group-price {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.group-progress {
  margin-top: 10rpx;
}

.progress-text {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 商品网格 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.product-item {
  width: 345rpx;
  margin: 0 10rpx 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  width: 100%;
  height: 345rpx;
}

.product-info {
  padding: 15rpx;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-brief {
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #FF4D4F;
  font-weight: bold;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
}

.product-tags {
  margin-top: 10rpx;
}

.tag {
  display: inline-block;
  padding: 0 6rpx;
  font-size: 20rpx;
  color: #fff;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.tag.hot {
  background-color: #FF4D4F;
}

.tag.new {
  background-color: #37C2FF;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 30rpx 0;
}

.loading {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF4D4F;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}