/* 附近商户样式 */
.nearby-merchants {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.nearby-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.merchant-list {
  display: flex;
  flex-direction: column;
}

.merchant-item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.merchant-item:last-child {
  border-bottom: none;
}

.merchant-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
}

.merchant-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.merchant-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.merchant-address {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 无服务商户提示 */
.no-service-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background-color: #FFF7CC;
  margin: 20rpx 30rpx;
  border-radius: 8rpx;
}

.no-service-tip text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}