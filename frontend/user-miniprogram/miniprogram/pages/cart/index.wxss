/* pages/cart/index.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.page-content {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 50rpx;
}

.placeholder-image {
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF4D4F;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}