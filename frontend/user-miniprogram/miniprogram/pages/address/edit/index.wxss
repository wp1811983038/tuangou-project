/* pages/address/edit/index.wxss */

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.form-item:last-child {
  border-bottom: none;
}

/* 标签 */
.label {
  width: 180rpx;
  font-size: 30rpx;
  color: #333;
  flex-shrink: 0;
}

.label.required::before {
  content: '*';
  color: #FF4D4F;
  margin-right: 8rpx;
}

/* 输入框 */
.input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  height: 50rpx;
  line-height: 50rpx;
}

.input::placeholder {
  color: #999;
}

/* 文本域 */
.textarea {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  min-height: 120rpx;
  line-height: 1.5;
  width: 100%;
}

.textarea::placeholder {
  color: #999;
}

/* 选择器 */
.picker-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

.arrow {
  font-size: 24rpx;
  color: #999;
}

/* 开关项 */
.switch-item {
  justify-content: space-between;
}

/* 提交区域 */
.submit-section {
  padding: 40rpx 30rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #FF4D4F;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
  margin-bottom: 30rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  background-color: #e64545;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #666;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 2rpx solid #ddd;
}

.cancel-btn::after {
  border: none;
}

.cancel-btn:active {
  background-color: #f5f5f5;
}

/* 禁用状态 */
button[disabled] {
  opacity: 0.6;
}

/* picker隐藏 */
picker {
  position: absolute;
  opacity: 0;
  pointer-events: none;
}